<% if @events.any? %>
<h1>All Events</h1>
  <table class="table table-striped table-bordered">
    <thead>
    <tr>
      <th>Type</th>
      <th>Event At</th>
      <th>Tracked At</th>
      <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= format_event_type(event.event_type) %></td>
        <td><%= format_time(event.event_at) %></td>
        <td><%= format_time(event.created_at) %></td>
        <td>
          <%= link_to "Edit", edit_event_path(event), class: "btn btn-primary" %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% else %>
  <p class="no-event-yet">No clock event tracked yet!</p>
<% end %>

<%= will_paginate @events %>