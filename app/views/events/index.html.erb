<h1>Clock Events</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Event At</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= format_event_type(event.event_type) %></td>
        <td><%= format_time(event.event_at) %></td>
        <td>
          <%= link_to "Edit", edit_event_path(event) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @events %>